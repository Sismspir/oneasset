const BASE_URL = window.BASE_URL || "http://localhost:8000";

export const toggleAvailability = async (filename, availabiltiy) => {
    try {
        const response = await fetch(`${BASE_URL}/change_availability_pdf`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              filename: filename,
              availability_type: availabiltiy,
            }),
          });

        if (!response.ok) {
            throw new Error("Failed to fetch documents");
        }

        return await response.json();
    } catch (error) {
        console.error("Error fetching documents:", error);
        return null;
    }
};
